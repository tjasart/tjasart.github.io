@import "_variables"

global-reset()

img
  max-width 100%

*
  font-family 'Lato', sans-serif

.clearfix
  clearfix()

.text-center
  text-align center

.upper
  text-transform uppercase

.container
  center(1080px, 15px)

#header
  .logo-container
    padding-left 0

  .logo-wrap
    padding 40px 0 30px
    float left

  .contact-wrap
    padding 62px 0 37px
    float right

    a
      padding 7px 10px
      border 2px solid color-green

    a
    a:hover
    a:active
    a:visited
      color color-black
      text-decoration none

    a:hover
    a:active
      color color-white
      background color-green

#main
  .title-block
    background url(images/header-background.jpg) 50% 50% no-repeat
    background-size cover
    padding 115px 0

    text-align center

    &:hover
      background linear-gradient(color-background-hover, color-background-hover), url(images/header-background.jpg) 50% 50% no-repeat
      background-size cover

    h1
      color color-white
      font-size 36px

  .main
    color color-black
    font-size 22px
    line-height 30px

    .bigger
      font-size 25px
      line-height 36px

    .content-wrapper
      padding 100px 0

    .title
      margin-top 0


    .middle-text
      margin 50px 0

      .last
        margin-top 25px

#footer
  background url(images/footer-background.jpg) 50% 50% no-repeat
  background-size cover
  padding 40px 0 180px 0
  color color-white

  &:hover
    background linear-gradient(color-background-hover, color-background-hover), url(images/footer-background.jpg) 50% 50% no-repeat
    background-size cover

  a
  a:hover
  a:active
  a:visited
    color color-white
    text-decoration underline

  a
  a:visited
    text-decoration none

  p
    margin-top 10px


@media (max-width 767px)
  #main
    .main
      font-size 16px
      line-height 20px

      .bigger
        font-size 20px
        line-height 25px

      .content-wrapper
        padding 75px 0

      .middle-text
        margin 35px 0

        .last
          margin-top 20px

  #header
    .contact-wrap
      float none
      clear both
      text-align center
      padding 5px 0 32px
